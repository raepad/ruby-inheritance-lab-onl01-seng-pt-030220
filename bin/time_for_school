#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"


some_knowledge = avi.teach 






jim = User.new
jim.first_name = "Jim"
jim.last_name = "Ricks"

jim.(some_knowledge)

puts "Jim just learned this important knowledge: '#{ji.knowledge.first}' from Avi."